*
	-webkit-tap-highlight-color transparent

body
	background $white
	color $dark
	font-weight 400
	font-size 16px
	font-family $fontFamily

html, body
	height 100%

input[type="text"],
input[type="email"],
input[type="password"],
input[type="tel"],
textarea
	-webkit-appearance none
	-moz-appearance none
	appearance none

#bx-panel
	@media print
		display none !important