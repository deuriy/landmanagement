.PageDescription
	padding-top 50px
	padding-bottom 43px
	background #EAEDF2
		
	@media $smPlus
		padding-top 61px
		padding-bottom 69px
	
	@media $mdPlus
		padding-bottom 65px
	
	&_container
		@media $xs
			padding-right 15px
			padding-left 15px
	
	&_title
		margin-bottom 20px
		font-weight 600
		font-size 20px
		line-height 1.25
		
		@media $smPlus
			margin-bottom 31px
			font-size 30px
			line-height 1.27
	
	&_text
		max-width 1050px
		font-size 14px
		line-height 1.86
		
		@media $smPlus
			font-size 16px
			line-height 1.63
	
	&-pageAbout
		padding-top 30px
		padding-bottom 30px
		
		@media $smPlus
			padding-top 50px
			padding-bottom 50px
		
		@media $mdPlus
			padding-bottom 57px
				
		.PageDescription_text
			font-weight 600
			font-size 16px
			line-height 1.63
			
			@media $mdPlus
				max-width none
	
	&-servicesPage
		padding-top 30px
		padding-bottom 50px
		
		@media $smPlus
			padding-top 50px
			padding-bottom 50px
				
		.PageDescription_text
			font-weight 600
			font-size 16px
			line-height 1.63
			
			@media $mdPlus
				max-width none
	
	&-servicePage
		padding-top 40px
		padding-bottom 35px
		
		@media $smPlus
			padding-bottom 50px
		
		@media $mdPlus
			padding-top 50px
			padding-bottom 62px
				
		.PageDescription_text
			font-size 16px
			line-height 1.63
			
			@media $mdPlus
				max-width none