.ProjectCard
	display flex
	flex-direction column
	width 292px
	border 1px solid #e5e8ee
	border-radius 2px
	background $white
	box-shadow 0 15px 30px 0 rgba(0, 0, 0, 0.1)
	@extend .transition
	
	&:hover
		box-shadow none
	
	@media $sm
		width 100%
		flex-direction row
	
	@media $lgPlus
		width 366px
	
	&_img
		@media $sm
			flex-basis 343px
			flex-shrink 0
	
	&_body
		min-height 127px
		padding 21px
		text-align center
		
		@media $sm
			display flex
			align-items center
			padding-left 40px
			text-align left
		
		@media $lgPlus
			padding 27px 42px 29px
	
	&_title
		font-weight 600
		font-size 14px
		line-height 1.86
		
		@media $smPlus
			font-size 16px
			line-height 1.6