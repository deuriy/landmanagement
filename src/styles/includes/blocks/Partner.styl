.Partner
	@media $mdPlus
		display flex
	
	&_logo
		margin-bottom 18px
		text-align center
		
		& > img
			width 227px
			
			@media $mdPlus
				width auto
		
		@media $mdPlus
			flex-shrink 0
			width 200px
			margin-right 82px
	
	&_description
		margin-bottom 9px
		font-size 16px
		line-height 1.63
		overflow hidden
		@extend .transition
		
		@media $smPlus
			margin-bottom 18px
	
	&_moreText
		display block
		position relative
		text-align center
		
		&:after
			content ""
			position absolute
			z-index -1
			top 0
			left 0
			bottom 0
			width 100%
			height 1px
			margin auto
			background #C3C5C9
			@extend .transition
		
		&-active
			.ArrowCircle
				border-color $blue
				background-image url('data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSIxNCIgaGVpZ2h0PSI4Ij48cGF0aCBmaWxsPSJub25lIiBzdHJva2U9IiMzMGE2ZGYiIHN0cm9rZS1saW5lY2FwPSJyb3VuZCIgc3Ryb2tlLWxpbmVqb2luPSJyb3VuZCIgc3Ryb2tlLXdpZHRoPSIyIiBkPSJNMSAxbDYgNiA2LTYiLz48L3N2Zz4=')
				transform rotate(180deg)
				
			&:after
				background $blue