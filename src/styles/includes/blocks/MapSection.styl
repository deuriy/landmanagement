.MapSection
	position relative
	
	&_map
		height 480px
			
		@media $smPlus
			height 1024px
		
		@media $mdPlus
			height 700px
	
	&_overlay
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background $blue
		opacity 0.3
	
	&_container
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		width 100%
		height 100%
		pointer-events none
		
		@media $mdPlus
			display flex
			justify-content flex-end
			align-items center
	
	&_overlayToggle
		position absolute
		top 20px
		right 20px
		width 60px
		height 60px
		padding 0
		border none
		outline none
		border-radius 50%
		background-color transparent
		background-image url('data:image/svg+xml;base64,')
		@extend .transition
		pointer-events all
		
		@media $smPlus
			top 40px
			right 40px
		
		&-close
			background-image url('data:image/svg+xml;base64,')
	
	&_contactsBlock
		position absolute
		right 20px
		bottom 20px
		pointer-events all
		
		@media $smPlus
			right 40px
			bottom 40px
		
		@media $lgPlus
			position static
	
	&-contacts
		.MapSection_map
			@media $sm
				height 514px
	
	&-objectsPage
		.MapSection_map
			@media $smPlus
				height 861px
			
			@media $lgPlus
				height 830px
	
	&-objectPage
		.MapSection_map
			height 300px
			
			@media print
				height auto
			
			@media $smPlus
				height 646px
			
			@media $lgPlus
				height 613px
		
		.MapSection_overlay, .MapSection_overlayToggle
			@media print
				display none