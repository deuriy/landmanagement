.Form
	width 320px
	padding 16px 15px 15px
	
	&_title
		margin-bottom 15px
		font-weight 600
		font-size 20px
		line-height 1.3
		text-align center
		
		@media $smPlus
			margin-bottom 24px
			font-size 30px
		
		@media $mdPlus
			margin-bottom 49px
	
	&_item
		margin-bottom 21px
	
	&_label
		margin-bottom 3px
	
	&_controls
		display flex
	
	&_control
		flex-grow 1
		flex-basis 0
		
		&-date
			margin-right 20px
	
	&_agreement
		margin-top 26px
		margin-bottom 24px
	
	&_hint
		position absolute
		bottom -22px
		left 0
		
		&-error
			font-size 11px
			line-height 2.45
			color $red
	
	&_result
		max-width 465px
		margin-right auto
		margin-left auto
		text-align center
	
	&_resultIcon
		margin-bottom 17px
		
		@media $smPlus
			margin-bottom 36px
	
	&_resultTitle
		margin-bottom 30px
		font-weight 600
		font-size 30px
		line-height 0.87
	
	&_resultText
		font-size 16px
		line-height 1.69
	
	&_resultBtn
		width 299px
		max-width 100%
		margin-top 38px
	
	&-sendMessage
		padding-top 40px
		padding-bottom 30px
	
		@media $smPlus
			width 630px
			padding-top 33px
		
		@media $mdPlus
			width 940px
			padding-top 64px
			padding-bottom 71px
		
		.Form_items
			@media $mdPlus
				display flex
				margin-bottom 10px
		
		.Form_emailAndPhone
			@media $smPlus
				display flex
			
			@media $mdPlus
				flex-basis 66.66%
		
		.Form_item
			position relative
			margin-bottom 11px
			
			&-name
				@media $mdPlus
					flex-basis 32.33%
					margin-right 20px
			
			&-email, &-phone
				@media $smPlus
					flex 1 0 0
			
			&-phone
				@media $smPlus
					margin-left 20px
			
			&-message
				position relative
		
		.Form_fileUpload
			position absolute
			bottom 4px
			left 2px
			max-width calc(100% - 17px)
			height 47px
			padding-right 14px
			padding-left 14px
			background $white
		
		.Form_agreementAndActions
			@media $smPlus
				display flex
				align-items center
				margin-top 14px
			
			@media $mdPlus
				-webkit-justify-content space-between
				justify-content space-between
		
		.Form_agreement, .Form_actions
			@media $smPlus
				flex 1 0 0
			
			@media $mdPlus
				flex 0 0 auto
		
		.Form_agreement
			margin-top 24px
			
			@media $smPlus
				margin 0
		
		.Form_actions
			@media $mdPlus
				flex-basis 299px
	
	&-popup
		padding-top 32px
		border-radius 2px
		overflow-x hidden
		overflow-y auto
	
	&-sendMessagePopup				
		@media $smPlus
			width 688px
			padding-right 44px
			padding-bottom 50px
			padding-left 44px
		
		@media $mdPlus
			width 970px
			padding-right 30px
			padding-left 30px
	
	&-getBetterConditions, &-sendByEmail
		.Form_title
			@media $smPlus
				margin-bottom 15px
				font-size 20px
	
	&-success
		padding-top 31px
		padding-bottom 22px
		
		.Form_resultIcon
			margin-bottom 36px
	
	&-error
		padding-top 51px
		padding-bottom 21px
		
		@media $smPlus
			padding-top 31px
	
	&-resultPopup
		padding-bottom 40px
		
		@media $smPlus
			width 615px
			padding-bottom 50px
		
		&.Form-getBetterConditions, &.Form-sendByEmail
			padding-top 75px
			padding-bottom 93px
			
			.Form_resultIcon
				@media $smPlus
					margin-bottom 15px
			
			@media $smPlus
				width 320px