.ProjectList
	padding-top 28px
	padding-bottom 50px
	
	@media $smPlus
		padding-top 39px
		padding-bottom 58px
	
	@media $mdPlus
		padding-top 49px
		padding-bottom 69px
	
	&_container
		@media $mdPlus
			display flex
		
		@media $lgPlus
			justify-content space-between
	
	&_item
		margin-right auto
		margin-left auto
		
		&:not(:last-child)
			margin-bottom 26px
			
			@media $smPlus
				margin-bottom 37px
			
			@media $mdPlus
				margin-bottom 0
				margin-right 30px
		
		@media $md
			flex 1 0 auto
		
		@media $mdPlus
			margin-right 0
			margin-left 0