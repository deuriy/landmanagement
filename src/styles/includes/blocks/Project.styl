.Project
	padding-top 31px
	padding-bottom 55px
	
	@media $smPlus
		padding-top 41px
		padding-bottom 75px
	
	@media $mdPlus
		padding-top 50px
		padding-bottom 105px
	
	&_title
		margin-bottom 20px
		font-size 18px
		line-height 2.11
		
		@media $smPlus
			font-weight 600
			font-size 26px
			line-height 1.46
		
		@media $mdPlus
			margin-bottom 30px
			font-size 30px
			line-height 1.27
	
	&_description
		margin-bottom 28px
		font-size 14px
		line-height 1.86
		
		@media $smPlus
			margin-bottom 18px
			font-size 16px
			line-height 1.63
		
		@media $mdPlus
			margin-bottom 48px
	
	&_tabs
		margin-bottom 36px
		
		@media $smPlus
			margin-bottom 14px
		
		@media $mdPlus
			margin-bottom 24px
	
	&_presentationBlock
		margin 0 auto 46px
	
	&_links
		display flex
		flex-direction column
		align-items center
		
		@media $smPlus
			flex-direction row
			justify-content center
			padding-right 10px
		
		@media $mdPlus
			justify-content flex-start
	
	&_link
		&:first-child
			margin-bottom 22px
			
			@media $smPlus
				margin-right 60px
				margin-bottom 0
			
			@media $mdPlus
				margin-right 29px