.OfferBlock
	width 300px
	border-radius 3px
	box-shadow 0 15px 30px 0 rgba(0, 0, 0, 0.1)
	background $white
	@extend .transition
	
	@media $lgPlus
		width 370px
	
	&:hover
		box-shadow none
	
	&_body
		min-height 126px
		padding 20px 14px 24px
		
		@media $lgPlus
			min-height 144px
			padding 24px 28px 28px
	
	&_title
		margin-bottom 16px
		font-weight 600
		font-size 14px
		line-height 1.375
		text-transform uppercase
		
		@media $lgPlus
			margin-bottom 15px
			font-size 16px
	
	&_description
		font-size 12px
		line-height 1.5
		
		@media $lgPlus
			font-size 14px
			line-height 1.57
	
	&_price
		display block
		border-bottom-right-radius 3px
		border-bottom-left-radius 3px
		background $blue
		color $white
		font-size 20px
		line-height 2.5
		text-align center
		@extend .transition
		
		&:hover
			background $darkBlue
		
		@media $lgPlus
			font-size 30px
			line-height 2