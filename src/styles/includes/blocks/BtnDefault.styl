.BtnDefault
	display inline-block
	padding 15px 23px 13px
	border 1px solid $blue
	border-radius 2px
	outline none
	font-size 16px
	text-align center
	background $white
	color $blue
	@extend .transition
	
	&:hover
		background $blue
		color $white
	
	&-block
		display block
		width 100%
	
	&-objectCard
		display block
		width 270px
		padding-top 5px
		padding-bottom 6px
		font-size 14px
		
		@media $smPlus
			width 243px
	
	&-download
		display inline-flex
		justify-content space-between
		align-items center
		width 290px
		padding 15px 34px
		text-align left
		
		@media $smPlus
			width 280px
			padding 15px 29px